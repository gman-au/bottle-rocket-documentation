      "post": {
        "tags": [
          "Manage captures / scans"
        ],
        "summary": "Process captured image(s)",
        "description": "Process uploaded images via this endpoint. Use the url-encoded multipart form schema to POST the image data.",
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "Form": {
                    "type": "array",
                    "items": {
                      "required": [
                        "key",
                        "value"
                      ],
                      "type": "object",
                      "properties": {
                        "key": {
                          "type": "string",
                          "nullable": true
                        },
                        "value": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  },
                  "qr_code": {
                    "type": "string"
                  },
                  "qr_bounding_box": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProcessCaptureResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProcessCaptureResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProcessCaptureResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
